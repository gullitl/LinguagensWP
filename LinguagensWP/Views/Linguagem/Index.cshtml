@model IEnumerable<Asp.LinguagensWP.Models.Linguagem>

@{
    ViewData["Title"] = "Index";
}

<h4>Lista de Linguagens</h4>
<hr />

<p>
    <a asp-action="AddOrEdit">Nova</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeLocation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficeLocation)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.LinguagemId">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.LinguagemId" onclick="return confirm('Tem certeza que deseja deletar esta linguagem?')">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
