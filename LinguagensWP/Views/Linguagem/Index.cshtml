@model IEnumerable<Asp.LinguagensWP.Models.Linguagem>

@{
    ViewData["Title"] = "Index";
}

<h4>Lista de Linguagens</h4>
<hr />

<p>
    <a asp-action="AddOrEdit">Nova</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.LinguagemId">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.LinguagemId" onclick="return confirm('Tem certeza que deseja deletar esta linguagem?')">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
