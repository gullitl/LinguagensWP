@model IEnumerable<Asp.LinguagensWP.Models.Linguagem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor.NomeCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LinguagemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LinguagemId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LinguagemId" onclick="return confirm('Você tem certeza que deseja excluir esta Linguagem?')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
